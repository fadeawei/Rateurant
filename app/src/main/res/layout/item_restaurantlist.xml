<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView_restaurantitem_name"
        android:layout_width="371dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Restaurant Name" />

    <RatingBar
        android:id="@+id/ratingBar_restaurantitem_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_restaurantitem_name" />

    <TextView
        android:id="@+id/textView_restaurantitem_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18sp"
        android:textColor="#7CFC00"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar_restaurantitem_rating"
        app:layout_constraintStart_toEndOf="@+id/ratingBar_restaurantitem_rating"
        app:layout_constraintTop_toTopOf="@+id/ratingBar_restaurantitem_rating"
        tools:text="Price" />
</android.support.constraint.ConstraintLayout>